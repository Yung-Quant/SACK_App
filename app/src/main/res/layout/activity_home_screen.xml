<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightPurple"
    tools:context="com.example.groupb.sack_app.HomeScreenActivity">

    <Button
        android:id="@+id/ResourcesButton"
        style="@android:style/Widget.Button"
        android:layout_width="140dp"
        android:layout_height="96dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="48dp"
        android:background="@color/darkPurple"
        android:onClick="toResources"
        android:text="Resources"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/button3"
        style="@android:style/Widget.Button"
        android:layout_width="140dp"
        android:layout_height="96dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="32dp"
        android:background="@color/darkPurple"
        android:onClick="toConsent"
        android:text="Consent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ResourcesButton" />

    <Button
        android:id="@+id/button4"
        style="@android:style/Widget.Button"
        android:layout_width="140dp"
        android:layout_height="96dp"
        android:layout_marginEnd="48dp"
        android:layout_marginTop="48dp"
        android:background="@color/darkPurple"
        android:onClick="toScenarios"
        android:text="Scenarios"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/button5"
        style="@android:style/Widget.Button"
        android:layout_width="140dp"
        android:layout_height="96dp"
        android:layout_marginEnd="48dp"
        android:layout_marginTop="32dp"
        android:background="@color/darkPurple"
        android:onClick="toDQ"
        android:text="Direct Questions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button4" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="118dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sack_logo" />

    <Button
        android:id="@+id/button7"
        style="@android:style/Widget.Button"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginEnd="48dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="32dp"
        android:background="@color/darkPurple"
        android:onClick="toContact"
        android:text="Contacts"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button3" />

</android.support.constraint.ConstraintLayout>
